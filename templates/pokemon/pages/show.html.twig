{% extends 'pokemon/pokemon.html.twig' %}

{% block title %}
	{{ pokemon.name }}
{% endblock %}

{% block content %}
	<div class="card">
		<div class="card__header">
			<div class="card__header-icon">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-eye"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/></svg>
			</div>

			<h2 class="card__header-title">{{ pokemon.name }} (détails)</h2>
		</div>

    <ul class="list">
      <li class="list__item">
        <strong>Nom</strong> {{ pokemon.name }}
      </li>

      <li class="list__item">
        <strong>Type</strong> {{ pokemon.type }}
      </li>
    </ul>

    <div class="btn-group">
      <a class="btn btn--primary" href="{{ path('app_pokemon_edit', {id: pokemon.id}) }}">
        Modifier le Pokémon
      </a>

      <a class="btn btn--secondary" href="{{ path('app_pokemon_delete', {id: pokemon.id}) }}">
        Supprimer le Pokémon
      </a>
    </div>
	</div>
{% endblock %}
